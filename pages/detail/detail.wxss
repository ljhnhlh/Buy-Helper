/* pages/detail/detail.wxss */
.active{
  color: pink;
}
.progress{
  display: inline-block;
}
.header{
  display: flex;
  flex-direction: row;
}
.cell{
  flex: 1;
}
.btn{
  width: 160rpx;
  height: 70rpx;
  color: green;
  text-align: center;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.title{
  position: relative;
  left: 45%;
  font-size: 50rpx;
  /* color: rgb(137, 216, 127); */
}
.whole{
  margin: 10rpx;
  background-color: #fff;
}
image{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  width: 700rpx;
  height: 600rpx;

}
.stars{
  margin-top: 30rpx;
}
.desc{
  width: 600rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  margin-left: 40rpx;
  margin-right: 10rpx;
}
.qu-popup {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 11;
} 
.qu-popup-container {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
 
  width: 100%;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  overflow: hidden;
  background: #fff;
  z-index: 12;
  text-align: center;
}

.qu-popup-choice {
  text-align: center;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  border-width: 2rpx 0rpx 2rpx 0rpx;
  border-style: solid;
  border-color: gainsboro;
  padding: 20rpx 0rpx 20rpx 0rpx;
}


.qu-popup-choice view {
  width: 50%;
  height: 200rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.qu-popup-choice view image {
  width: 80%;
  margin: 0rpx 10% 0rpx 10%;
  height: 180rpx;
  /* border: 2rpx solid black; */
  /* z-index: 12; */
}

.qu-popup-btn {
  height: 100rpx;
  width: 100%;
  font-size: 40rpx;
  padding: 15rpx;
}
.displayBtn{
  display: flex;
  flex-direction: row;
  margin-right: 120rpx;
}
.displayBtn-button{
  display: flex;
  flex-direction: column;
  width:200rpx;
  font-size:30rpx;
  margin-top:10rpx;
  margin-bottom:10rpx;
}

.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0);
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 650rpx;
  height: 350rpx;
  margin-left: 50rpx;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
  box-shadow: 0px 3px 3px 2px gainsboro;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}