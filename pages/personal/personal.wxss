.top-block {
background-color:white;
padding: 25px;
margin: 2px;
border-radius: 2%;
display: flex;
flex-direction: row;
}
.s-image{
  border-radius: 50%;
  width:120px;
  height: 120px;
  margin-right: 30px;  
}
.userinfo-avatar {
  overflow:hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  z-index: 2;
}
.userinfo {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: rgb(68, 66, 66);
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
 
.userinfo text {
  /* color: #fff; */
  font-size: 14px;
  background-color: #272626;
  border-radius:40%;
}

.per_info{
  display: flex;
  flex-direction: column;
  padding-top: 30px;
}
.name{
  font-size: 30px;
  padding-bottom: 10px;
}
.mid-block{
  display: flex;
  flex-direction: column;
  margin-top: 25px; 
  margin-left: 2px;
  margin-right: 2px;
}
.list-item{
  display: flex;
  flex-direction: row;
  background-color: white;
  padding: 10px;
  border-radius: 5%
}

.l-icon{
  width: 25px;
  height: 25px;
  margin-right: 20px;
  
}

.r-icon{
  width: 25px;
  height: 25px;
  margin-left: 200px;
}
